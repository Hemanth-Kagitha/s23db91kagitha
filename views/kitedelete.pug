extends layout
block content
 h1= title
 if (toShow == null)
  h2 No instance to delete
 else
  - let Kiteid = toShow._id
  - let Kite_color = toShow.Kite_color
  - let Kite_length = toShow.Kite_length
  - let Kite_cost = toShow.Kite_cost
  - let Kite_sides = toShow.Kite_sides
  - let actionid = "/resource/Kite/" + Kiteid
  script let actionid = "#{actionid}"
  div
   div.row
    div(class='KiteAttr mr-3') Kite ID is:
    div #{Kiteid}
   div.row
    div(class='KiteAttr mr-3') Kite Type is:
    div #{Kite_color}
   div.row
    div(class='KiteAttr mr-3') Kite Size is:
    div #{Kite_cost}
   div.row
    div(class='KiteAttr mr-3') Kite Cost is:
    div #{Kite_cost}
   div.row
    div(class='KiteAttr mr-3') Kite Sides are :
    div #{Kite_sides}
  button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete
  button(class="btn btn-secondary m-2" onclick="cancel()") Cancel
 script.
  function cancel() {
  // Go back to the home page for the Kite collection
  window.location.href='/kite'
  }
